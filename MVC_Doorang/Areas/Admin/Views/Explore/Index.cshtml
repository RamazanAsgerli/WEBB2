
@using Core.Models
@model List<Explore>
<h1>
    Explore

    <a class="btn btn-primary" asp-action="Create">Create</a>
</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">SubTitle</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
           @foreach(var item in Model){
        <tr>
        
               <td>@item.Title</td>
               <td>@item.Subtitle</td>
               <td>@item.Description</td>
                <td>
                    <div style="width:100px">
                             <img width="100%" src="~/Upload/Explore/@item.ImgUrl">
                    </div>
                </td>
                <td>
                    <a class="btn btn-dark" asp-action="Update" asp-controller="Explore" asp-route-id=@item.Id>Update</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Explore" asp-route-id=@item.Id>Delete</a>

                </td>
    
        </tr>
        }
    </tbody>
</table>
