@using Core.Models

@model Explore

<div class="container">

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3 col-md-4">
            <input asp-for="Title" class="form-control" placeholder="Title">
            <label asp-for="Title">Title</label>
            <span asp-validation-for="Title" style="color:darkred"></span>
        </div>
        <div class="mb-3 col-md-4">
            <input asp-for="Subtitle" class="form-control" placeholder="Subtitle">
            <label asp-for="Subtitle">Subtitle</label>
            <span asp-validation-for="Subtitle" style="color:darkred"></span>
        </div>
        <div class="mb-3 col-md-4">
            <input asp-for="Description" class="form-control" placeholder="Description">
            <label asp-for="Description">Description</label>
            <span asp-validation-for="Description" style="color:darkred"></span>
        </div>
        <div class="mb-3 col-md-4">
            <label asp-for="PhotoFile" class="form-label"> Image </label>
            <input asp-for="PhotoFile" class="form-control">
            <span asp-validation-for="PhotoFile" style="color:darkred"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>


    </form>


</div>
